#!/bin/sh

# This file runs when a DM logs you into a graphical session.  If you use startx/xinit like a Chad, this file will also be sourced.
# Fix Gnome Apps Slow  Start due to failing services
#Add this when you include flatpak in your system
# dbus-update-activation-environment --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY &

. $HOME/.config/xprofile.local
xset r rate 300 50 &	# Speed xrate up
xrdb ~/.config/Xresources 	# Uncomment to use Xresources colors/settings on startup
xrdb -merge ~/.config/Xresources.local 	# Include local file

$COMP &
$PLASMA &
$STATUSBAR &
$CLUTTER &
$SHORTCUTS &



