{
  "coc.source.iced.enable": true,
  "python.linting.pylintEnabled": false,
  "coc.preferences.formatOnType": true,
  "suggest.noselect": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "vue",
    "typescriptvue",
    "javascriptvue",
    "typescriptreact",
    "javascriptreact",
    "json",
    "typescript.tsx",
    "graphql",
    "python"
  ],
  "python.linting.enabled": true,
  "pyright.disableDiagnostics": true, // disables pyright linting
  "python.linting.flake8Enabled": true, // use flake8 instead
  "python.formatting.provider": "autopep8",
  "git.addGBlameToVirtualText": true,

  "diagnostic-languageserver.enable": true,
  "diagnostic-languageserver.linters": {
    "clj_kondo_lint": {
      "command": "clj-kondo",
      "debounce": 100,
      "args": ["--lint", "%filepath"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "clj-kondo",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    }
  },
  "diagnostic-languageserver.filetypes": { "clojure": "clj_kondo_lint" }
}
