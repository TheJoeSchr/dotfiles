#!/usr/bin/env sh
cmd="vmux"
if [ -n "$TMUX" ] ; then
    # tmux session running
    tmux split-window -h "$cmd \"$*\""
else
    # Remove option --tab for new window
    if [ $XDG_SESSION_TYPE != "tty" ]; then
        konsole -e "$cmd \"$*\""
    else
        echo "nvim \"$*\""
        exec nvim "$*"
    fi
fi
